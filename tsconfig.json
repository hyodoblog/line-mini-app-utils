{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "alwaysStrict": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
